.container{
    width:100%;
    height:100%;
    background: #EFEFF4;
    position: relative;
}
/* 搜索框 */
.search{
    display: flex;
    position: fixed;
    top:0;
    left:0;
    z-index: 10;
    width:100%;
    height:56rpx;
    padding:16rpx;
    background: #F0EFF5;
}
.search-input{
    display: flex;
    justify-content: space-between;
    width:634rpx;
    height:56rpx;
    background: #fff;
    border:1rpx solid #E6E6EA;
    border-radius: 10rpx;
}
.search-input icon{
    width:51rpx;
    text-align:center;
    margin-top:16rpx;
}
.search-input input{
    flex:1;
    font-size:26rpx;
    color:#333333;
    line-height:37rpx;
    margin-top:4rpx;
}
.search-btn{
    margin-left: 18rpx;
    line-height: 56rpx;
    font-size: 32rpx;
    color: #1890FF;
    cursor: pointer;
}
/* 订单列表 */
.list{
    padding: 88rpx 0 0 30rpx;
    background:#fff;
}
.list-item{
    min-height: 128rpx;
    padding:20rpx 0;
    border-bottom: 1rpx solid #eee;
}
.base-info{
    display: flex;
    line-height: 51rpx;
    font-size: 28rpx;
    color:#000;
}
.other-info{
    display: flex;
    line-height: 26rpx;
    font-size: 22rpx;
    color:rgba(0, 0, 0, 0.65);
}
.no-data{
    width:100%;
    line-height:80rpx;
    text-align: center;
    font-size: 34rpx;
    color:#000;
}
.noMore{
    width:100%;
    line-height:80rpx;
    text-align: center;
    background: #F4F4F4;
    box-shadow: 0 -1px 0 0 rgba(210,210,210,0.50);
    font-size: 34rpx;
    color:#d2d2d2;
}
