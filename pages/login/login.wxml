<view class='container'>
 <view class='login-icon'>
    <image class='login-image' bindload="imageLoad" src='{{imgSrc}}'
        style='width:{{imgWidth}}rpx;height:{{imgHeight}}rpx;'></image>
 </view>
  <view class='login-form'>
    <!-- 账号 -->
    <view class='inputView'>
      <input class='inputText' placeholder='请输入您的账号' focus bindinput='userInput'/>
    </view>

    <!-- 密码 -->
    <view class='inputView'>
        <input class='inputText' password='true' placeholder='请输入您的密码'
         bindinput='pswInput'></input>
    </view>

    <!-- 按钮 -->
    <view class='loginBtnView'>
        <button class='loginBtn' bindtap='getKey'>立即登录</button>
    </view>
  </view>
</view>