.container{
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
}
/* 登录图片 */
.login-icon{
    width:100%;
}
/* 表单内容 */
.login-form{
    margin-top:116rpx;
    flex: auto;
    height:100%;
}
/* 输入框 */
.inputView{
    margin:0 40rpx 24rpx;
    padding:29rpx 0 29rpx 43rpx;
    border:1rpx solid #00479f;
    border-radius: 8rpx;
    line-height: 108rpx;
}
.inputText{
    flex: block;
    color: rgba(0,0,0,0.45);
    font-size: 36rpx;
    line-height:50rpx;
}
/* 按钮 */
.loginBtnView{
    padding:28rpx 124rpx;
}
.loginBtn{
    width:100%;
    height:94rpx;
    background-image: linear-gradient(241deg, #1A91FF 0%, #665BFF 92%);
    border: 2rpx solid rgba(5,5,5,0.08);
    box-shadow: 0 4rpx 5rpx 0 rgba(46,133,255,0.45);
    border-radius: 100rpx;
    font-size:36rpx;
    color:#fff;
}